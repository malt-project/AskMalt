# The AskMalt Programming Language Grammar

Expr
	::= Number
	|	String
	|	Symbol
	|	Tuple
	|	EQuote
	|	'(' RExpr ')'
	;

RExpr
	::=	Let
	|	If
	|	Cond
	|	Match
	|	Defun
	|	Lambda
	|	Quote
	|	FCall
	;

Let ::= "let" Symbol Expr ;

If
	::= "if" Expr Expr
	|   "if" Expr Expr Expr
	;

Cond ::= "cond" ('[' Expr Expr ']')+ ;

Match ::= "match" Expr ('[' Expr Expr ']')+ ;

Defun ::= "fun" Symbol '(' (Name)+ ')' (Expr)+ ;

Lambda ::= '\\' '(' (Name)+ ')' (Expr)+ ;

FCall ::= (Expr)+ ;

Quote ::= "quote" (Expr)+ ;

Tuple ::= '[' (Expr)+ ']' ;

Symbol := r"[^\0.]" ;

String := r"\"(.)+(\n)+(.)*(\n)+\"" ;

